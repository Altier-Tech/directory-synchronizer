<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tech.altier.synchronizer.SetupController" >

    <center>
            <VBox alignment="CENTER">
                <Label text="Select the folder you want to sync.">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Label>
                <Button onAction="#onChooseFolderButtonClick" text="Choose Folder" />
            </VBox>
    </center>

    <left>
        <VBox alignment="CENTER" prefWidth="170.0">
            <VBox alignment="CENTER">
                <ImageView fx:id="appLogo" fitHeight="125.0" fitWidth="125.0" layoutX="61.0" layoutY="83.0" pickOnBounds="true" preserveRatio="true">
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                    </VBox.margin></ImageView>

                <Label alignment="CENTER" contentDisplay="CENTER" text="Altier Zink">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="2.5" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <font>
                        <Font name="Berlin Sans FB" size="25.0" />
                    </font></Label>
            </VBox>

            <VBox alignment="CENTER">
                <Label text="Settings" >
                    <font>
                        <Font name="Berlin Sans FB" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="2.5" right="5.0" top="5.0" />
                    </padding>
                </Label>

                <Label text="About" onMouseClicked="#handleAbout">
                    <font>
                        <Font name="Berlin Sans FB" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="2.5" right="5.0" top="2.5" />
                    </padding>
                </Label>

                <Label text="Exit" onMouseClicked="#handleExit">
                    <font>
                        <Font name="Berlin Sans FB" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="2.5" right="5.0" top="2.5" />
                    </padding>
                </Label>
            </VBox>

        </VBox>
    </left>

</BorderPane>
